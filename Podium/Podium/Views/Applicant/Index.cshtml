@model Applicant

<div class="container">
    <div class="panel panel-primary">
        <div class="panel panel-heading">Podium Applicants</div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form class="form-horizontal" asp-controller="Applicant" asp-action="NewApplicant" method="post" role="form" id="applicantForm">

            <div class="form-group">
                @Html.AntiForgeryToken()
                
                
                <p class="text-center">Provide us with a few details and we'll give you a unique id that you can use to see what's available to you.</p>
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-4">
                    <input class="form-control" id="FirstName" asp-for="FirstName" type="text" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-4">
                    <input class="form-control" id="LastName" asp-for="LastName" type="text" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Date Of Birth</label>
                <div class="col-sm-2">
                    <input type="date" class="form-control" id="Dob" asp-for="Dob">
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-2">
                    <input class="form-control" id="Email" asp-for="Email" type="text" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
   

    <div class="form-group">
        <label class="col-sm-2 control-label">Result</label>
        <div class="col-sm-10">
            <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
        </div>
    </div>

    </form>
</div>
</div>